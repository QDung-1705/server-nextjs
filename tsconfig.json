{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "outDir": "./dist",                 // ✅ thư mục chứa mã đã biên dịch
    "rootDir": "./src",                 // ✅ thư mục chứa mã nguồn
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true
  },
  "include": ["src"],                   // ✅ biên dịch tất cả file trong src/
  "exclude": ["node_modules"]
}